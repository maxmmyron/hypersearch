{
  "manifest_version": 3,
  "name": "Hypersearch",
  "version": "1.0",
  "description": "Power user browsing tools",

  "icons": {
    "48": "icons/hypersearch-48.png"
  },

  "content_scripts": [
    {
      "matches": ["*://*.google.com/*"],
      "js": ["content/scripts/populate.js"],
      "css": ["content/styles/hypersearch.css"]
    }
  ],

  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": "icons/hypersearch-48.png"
  },

  "permissions": [
    "storage",
    "tabs",
    "activeTab"
  ],

  "web_accessible_resources": [
    {
      "resources": ["/assets/*"],
      "matches": ["*://*.google.com/*"]
    }
  ]
}
