{
  "manifest_version": 3,
  "name": "Hypersearch",
  "version": "1.0",
  "description": "Power user browsing tools",

  "icons": {
    "16": "icons/hypersearch_light-16.png",
    "32": "icons/hypersearch_light-32.png",
    "48": "icons/hypersearch_light-48.png",
    "128": "icons/hypersearch_light-128.png"
  },

  "content_scripts": [
    {
      "matches": ["*://www.google.com/search*"],
      "js": ["content/polyfill.js", "content/populate.js"],
      "css": ["content/hypersearch.css"]
    }
  ],

  "action": {
    "default_icon": {
      "16": "icons/hypersearch_light-16.png",
      "32": "icons/hypersearch_light-32.png"
    },
    "default_title": "Hypersearch",
    "default_popup": "popup/popup.html",
    "theme_icons": [
      {
        "light": "icons/hypersearch_light-16.png",
        "dark": "icons/hypersearch_dark-16.png",
        "size": 16
      },
      {
        "light": "icons/hypersearch_light-32.png",
        "dark": "icons/hypersearch_dark-32.png",
        "size": 32
      },
      {
        "light": "icons/hypersearch_light-48.png",
        "dark": "icons/hypersearch_dark-48.png",
        "size": 48
      },
      {
        "light": "icons/hypersearch_light-96.png",
        "dark": "icons/hypersearch_dark-96.png",
        "size": 96
      }
    ]
  },

  "permissions": [
    "storage",
    "tabs"
  ],

  "web_accessible_resources": [
    {
      "resources": ["/assets/*"],
      "matches": ["*://*.google.com/*"]
    }
  ]
}
