{
  "manifest_version": 3,
  "name": "Hypersearch",
  "version": "1.0",
  "description": "Power user browsing tools",

  "icons": {
    "48": "icons/hypersearch-48.png",
    "96": "icons/hypersearch-96.png"
  },

  "content_scripts": [
    {
      "matches": ["*://www.google.com/search*"],
      "js": ["content/polyfill.js", "content/populate.js"],
      "css": ["content/hypersearch.css"]
    }
  ],

  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": "icons/hypersearch-48.png"
  },

  "permissions": [
    "storage",
    "tabs"
  ],

  "web_accessible_resources": [
    {
      "resources": ["/assets/*"],
      "matches": ["*://*.google.com/*"]
    }
  ]
}
